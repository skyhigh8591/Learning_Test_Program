;
; 配合"ADC0804實習板"
;   讀取ADC0804的類比電壓值(採用中斷方式來同步),並將之顯示於8個LED上
;
ADCRD	REG	P1.0
ADCWR	REG	P1.1

	LJMP	START
	LJMP	EXTERNAL0
START:
	SETB	EA
	SETB	IT0
	SETB	EX0
; Start First ADC
	CLR	ADCWR
	SETB	ADCWR
	SJMP	$
EXTERNAL0:
	CLR	ADCRD
	MOV	P2,P0
	SETB	ADCRD
; Start Next ADC
	CLR	ADCWR
	SETB	ADCWR
	RETI
	END

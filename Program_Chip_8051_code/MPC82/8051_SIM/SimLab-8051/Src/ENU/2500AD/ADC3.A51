;
;   Read analog voltage from ADC0804 (synchronize by interrupt method),
;     then display voltage on 8 pieces of LED
;
ADCRD	REG	P1.0
ADCWR	REG	P1.1

	LJMP	START
	LJMP	EXTERNAL0
START:
	SETB	EA
	SETB	IT0
	SETB	EX0
; Start First ADC
	CLR	ADCWR
	SETB	ADCWR
	SJMP	$
EXTERNAL0:
	CLR	ADCRD
	MOV	P2,P0
	SETB	ADCRD
; Start Next ADC
	CLR	ADCWR
	SETB	ADCWR
	RETI
	END

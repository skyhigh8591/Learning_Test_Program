;
;
;
; 1. When the most left  LED is OFF ====>OFF-LED rotate right
; 2. When the most right LED is OFF ====>OFF-LED rotate  left
;
START:
	MOV	DPTR,#TBL1
	MOV	R2,#14
LOOP:
	MOV	A,#0
	MOVC	A,@A+DPTR
	INC	DPTR
	CPL	A
	MOV	P0,A
	ACALL	DELAY100MS
	DJNZ	R2,LOOP
	LJMP	START

	include delay.inc

TBL1:
	DB	01111111B
	DB	10111111B
	DB	11011111B
	DB	11101111B
	DB	11110111B
	DB	11111011B
	DB	11111101B
	DB	11111110B
	DB	11111101B
	DB	11111011B
	DB	11110111B
	DB	11101111B
	DB	11011111B
	DB	10111111B
	END
